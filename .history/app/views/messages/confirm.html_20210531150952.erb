<%= form_for @message, :url => done_path do |f| %>
  <div class="message-container">
    <h2>内容確認</h2>
    <div class="confirm">
      <strong>名前</strong>
      <p class="p-text">
        <%= f.hidden_field :name %>
        <%= @message.name %>
      </p>
    </div>
    <div class="confirm">
      <strong>メールアドレス</strong>
      <p class="p-text">
        <%= f.hidden_field :email %>
        <%= @message.email %>
      </p>
    </div>
    <div class="confirm">
      <strong>内容</strong>
      <p class="p-text">
        <%= f.hidden_field :content %>
        <%= simple_format(@message.content) %>
      </p>
    </div>
      <%= f.submit '送信する', :class => 'confirm-btn' %>
      <%= f.submit '戻る', :class => 'confirm-btn', name: 'back' %>
  </div>
<% end %>
